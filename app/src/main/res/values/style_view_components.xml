<resources xmlns:tools="http://schemas.android.com/tools">

    <!--    Text views-->
    <style name="ToolbarTitleTextAppearance" parent="MediumText.Large">
        <item name="android:lineSpacingMultiplier">1.33</item>
    </style>

    <style name="RegularText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="fontFamily">@font/regular_heebo</item>
        <item name="android:fontFamily">@font/regular_heebo</item>
    </style>

    <style name="RegularText.Small" parent="RegularText">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="RegularText.Regular" parent="RegularText">
        <item name="android:textSize">@dimen/text_size_regular</item>
    </style>

    <style name="RegularText.Medium" parent="RegularText">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="RegularText.MediumLarge" parent="RegularText">
        <item name="android:textSize">@dimen/text_size_medium_large</item>
    </style>

    <style name="RegularText.Large" parent="RegularText">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="RegularText.ExtraLarge" parent="RegularText">
        <item name="android:textSize">@dimen/text_size_extra_large</item>
    </style>

    <style name="HiddenText" parent="RegularText">
        <item name="android:textSize">@dimen/zero</item>
    </style>


    <style name="MediumText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="fontFamily">@font/medium_heebo</item>
        <item name="android:fontFamily">@font/medium_heebo</item>
    </style>

    <style name="MediumText.Small" parent="MediumText">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="MediumText.Regular" parent="MediumText">
        <item name="android:textSize">@dimen/text_size_regular</item>
    </style>

    <style name="MediumText.Medium" parent="MediumText">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="MediumText.MediumLarge" parent="MediumText">
        <item name="android:textSize">@dimen/text_size_medium_large</item>
    </style>

    <style name="MediumText.Large" parent="MediumText">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="MediumText.ExtraLarge" parent="MediumText">
        <item name="android:textSize">@dimen/text_size_extra_large</item>
    </style>


    <!--    Progress bar-->
    <style name="ProgressBar" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorSecondary</item>
    </style>

    <style name="PrimaryProgressBar" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="Dialog.FullScreen.SlideBottomToTop" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/white</item>
    </style>

    <!--    Button-->
    <style name="TextAppearance.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PrimaryButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:textAppearance">@style/TextAppearance.Button</item>
        <item name="android:background">@drawable/background_button_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:minHeight">@dimen/min_button_height</item>
        <item name="android:paddingLeft">@dimen/margin_small</item>
        <item name="android:paddingRight">@dimen/margin_small</item>
        <item name="android:paddingTop">@dimen/margin_small</item>
        <item name="android:paddingBottom">@dimen/margin_small</item>
        <item name="elevation">@dimen/zero</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">@dimen/zero</item>
        <item name="fontFamily">@font/regular_heebo</item>
        <item name="font">@font/regular_heebo</item>
        <item name="android:fontFamily">@font/regular_heebo</item>
        <item name="android:font">@font/regular_heebo</item>
        <item name="cornerRadius">@dimen/radius_regular</item>
    </style>

</resources>